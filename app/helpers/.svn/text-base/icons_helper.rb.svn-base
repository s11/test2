module IconsHelper
  # Returns an html image tag for the icon specified in +source+. Standard image_tag +options+ apply.
  def icon(source, options = {})
    image_tag("icons/#{source}.png", options)
  end

  def flag(source, options = {})
    image_tag("flags/png/#{source}.png", options)
  end
end