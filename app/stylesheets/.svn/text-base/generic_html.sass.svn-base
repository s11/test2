html > body
  :background #FFF url(/images/page_background.png) repeat-y
  :margin 0
  :padding 0
  :font-family Arial
  :font-size 12px

a
  :text-decoration none
  &:hover
    :text-decoration underline

form
  :margin 0
  :padding 0

  label
    :display block
    :font-weight bold
  
  .radio-button, .check_box_button
    :padding 0.25em
    label
      :display inline
    

  button
    :padding 0
    :margin 0 0 3px 0 !important

  table
    tbody
      th, td
        :padding 0.25em

      th
        :text-align right

fieldset
  :border 1px solid #ccc
  :border-width 1px 0 0 0
  :margin 2em 0
  :padding 1em
  legend
    :font-weight bold

table
  :border-collapse collapse
  :width 100%

  .even
    :background-color #eeeeee
  .odd
    :background-color #fefefe


.centre, .center
  :text-align center

.left
  :text-align left
.fleft
  :float left

.right
  :text-align right
.fright
  :float right

.top
  :vertical-align top

.middle
  :vertical-align middle

.bottom
  :vertical-align bottom

a
  img
    :border none